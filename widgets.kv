#:import utils kivy.utils

<Manager>:  # Do the screens transiton
    Screen:
        name: 'screen'
        canvas.before:
            Color:
                rgba: utils.get_color_from_hex('#25034B')
            Rectangle:
                pos: self.pos
                size: self.size	
        BoxLayout:
            orientation: 'vertical'
            padding: 100  # margin
            spacing: 30  # space between buttons
            Label:
                text: 'Menu'
            Button:
                background_color: utils.get_color_from_hex('#CE9B0E')
                text: 'Convert Files'
                on_release: root.current = 'ConvertFiles'
            Button:
                background_color: utils.get_color_from_hex('#CE9B0E')
                text: 'Generate Report'
                on_release: root.current = 'GenerateReport'
    ConvertFiles:
        name: 'ConvertFiles'
        canvas.before:
            Color:
                rgba: utils.get_color_from_hex('#25034B')
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            text: '<-'
            on_release: root.current = 'screen'
            pos_hint: {'x': 0, 'y': .95}
            size_hint: .07, .06

    GenerateReport:
        name: 'GenerateReport'
        canvas.before:
            Color:
                rgba: utils.get_color_from_hex('#25034B')
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            text: '<-'
            on_release: root.current = 'screen'
            pos_hint: {'x': 0, 'y': .95}
            size_hint: .07, .06

<ConvertFiles>:  # Screen to convert files
    FloatLayout:
        Label:
            text: '|----------Conversor----------|'
            pos_hint: {"x": .45, "y": .75}
            size_hint: (.1, .2)
        Label:
            text: 'Directory: '
            pos_hint: {"x": .3, "y": .7}
            size_hint: (.1, .05)
        Button:
            text: 'Search'
            pos_hint: {"x": .7, "y": .7}
            size_hint: (.1, .05)
            on_release: root.report()
        Label:
            text: 'From: '
            pos_hint: {"x": .27, "y": .45}
            size_hint: (.1, .2)
        Label:
            text: 'to: '
            pos_hint: {"x": .49, "y": .45}
            size_hint: (.1, .2)
        Button:
            text: 'Convert'
            font_size: 15
            on_release: root.convert()
            pos_hint: {"x": .41, "y":.22}
            size_hint: (.18, .08)

    Spinner:
        id: Files
        size_hint: .15, .05
        pos_hint: {'center': (.2, .72)}
        text: 'File'
        values: ['File', 'Directory', 'Subdirectory']

    Spinner:
        id: opentype
        size_hint: .1, .05
        pos_hint: {'center': (.42, .55)}
        text: 'Pdf'
        values: ['Pdf', 'Docx', 'Jpg', 'Png', 'Json', 'Csv']

    Spinner:
        id: closetype
        size_hint: .1, .05
        pos_hint: {'center': (.63, .55)}
        text: 'Docx'
        values: ['Pdf', 'Docx', 'Jpg', 'Png', 'Json', 'Csv']


<GenerateReport>:  # Screen to generate reports
    FloatLayout:
        BotaoAmarelo:
            text: 'loading...'

<BotaoAmarelo@ButtonBehavior+Label>:
    canvas:
        Color:
            rgba: utils.get_color_from_hex('#CE9B0E')
        Rectangle:
            pos:self.pos
            size:200,100
